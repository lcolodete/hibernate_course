<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   	<class name="exercicio44.produto.Produto" table="PRODUTO">
			
      	<id name="id" column="ID"> 
         	<generator class="sequence">
            	<param name="sequence">SEQ_PRODUTO</param>
         	</generator>
      	</id>
		
      	<property name="nome" 
                  column="NOME"
                  type="string"
                  not-null="true"/>
      
      	<property name="descricao" 
                  column="DESCRICAO"
                  type="string"
                  not-null="true"/>
                
      	<property name="lanceMinimo" 
                  column="LANCE_MINIMO"
                  type="double"
                  not-null="true"/>
                
      	<property name="dataCadastro" 
                  column="DATA_CADASTRO"
                  type="date"
                  not-null="true"
                  access="field"/>

      	<property name="dataVenda" 
                  column="DATA_VENDA"
                  type="date"/>

      	<set name="lances" 
             order-by="ID asc">

<!--
         ==> inverse="true" e 
             cascade="save-update" 
         
         não são necessários em função da forma como um lance é 
         cadastrado e não é  possível remover um  produto se há 
         lances para ele.
-->

      	  	<key column="PRODUTO_ID"/>
          	<one-to-many class="exercicio44.lance.Lance"/>

      	</set>

      	<many-to-one name="lanceVencedor" 
                     class="exercicio44.lance.Lance" 
                     column="LANCE_VENCEDOR_ID" 
                     unique="true"/>

   	</class>	
</hibernate-mapping>
