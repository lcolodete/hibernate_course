<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   	<class name="exercicio19a.Categoria" table="CATEGORIA">
			
      	<id name="id" column="ID"> 
         	<generator class="sequence">
            	<param name="sequence">SEQ_CATEGORIA</param>
         	</generator>
      	</id>
		
      	<property name="nome" 
                  column="NOME"
                  type="string"
                  not-null="true"/>

      	<!-- Uma associação um-para-muitos recursiva e bidirecional. -->
      
      	<many-to-one name="categoriaPai"
                     class="exercicio19a.Categoria" 
                     column="ID_CATEGORIA_PAI"/>
                
      	<set name="subCategorias" 
             cascade="save-update"
             inverse="true"
             order-by="id asc">

         	<key column="ID_CATEGORIA_PAI"/>
         	<one-to-many class="exercicio19a.Categoria"/>

      	</set>

   	</class>	
</hibernate-mapping>
