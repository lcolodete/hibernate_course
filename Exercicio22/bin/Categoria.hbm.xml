<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   	<class name="exercicio22.categoria.Categoria" table="CATEGORIA">
			
      	<id name="id" column="ID"> 
         	<generator class="sequence">
            	<param name="sequence">SEQ_CATEGORIA</param>
         	</generator>
      	</id>
		
      	<property name="nome" 
                  column="NOME"
                  type="string"
                  not-null="true"/>
      
      	<many-to-one name="categoriaPai"
                     class="exercicio22.categoria.Categoria" 
                     column="ID_CATEGORIA_PAI"/>
                
      	<set name="subCategorias" 
             table="CATEGORIA" 
             cascade="save-update" 
             inverse="true">   
             
             <!-- O cascade e o inverse são necessários pq  uma 
                  subcategoria é cadastrada adicionando-se esta
                  subcategoria ao conjunto de subcategorias  de 
                  uma categoria -->

         	<key column="ID_CATEGORIA_PAI"/>
         	<one-to-many class="exercicio22.categoria.Categoria"/>

      	</set>

      	<!-- Uma associação muitos-para-muitos recursiva e bidirecional. -->

      	<set name="produtoCategorias" 
             order-by="ID_PRODUTO">

<!--         cascade="save-update" e 
             inverse="true" não  são necessários  em função da  forma 
             como  uma  ocorrência de  ProdutoCategoria  é  inserida,
             isto é, sem adicioná-la ao conjunto de produtoCategorias
             de uma categoria.  -->

         	<key column="ID_CATEGORIA" />
         	<one-to-many class="exercicio22.prodcat.ProdutoCategoria" />

      	</set>

   	</class>	
</hibernate-mapping>
