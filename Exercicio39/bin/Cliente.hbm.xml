<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   	<class name="exercicio39.cliente.Cliente" table="CLIENTE">
			
      	<id name="id" column="ID"> 
         	<generator class="sequence">
            	<param name="sequence">SEQ_CLIENTE</param>
         	</generator>
      	</id>
		
      	<property name="nome" 
                  column="NOME"
                  type="string"
                  not-null="true"/>

      	<set name="cccs" 
             order-by="ID_CLIENTE, ID_CONTA, ID_CARTAO">
           
<!--       inverse="true" e 
           cascade="save-update" 
           
           não são necessários em função da forma como uma  ocorrência
           de ClienteContaCartao é salva e pelo fato de um cliente não
           poder ser removido caso ele esteja associado a uma ou  mais
           ocorrências de ClienteContaCartao.
-->

         	<key column="ID_CLIENTE" />
         	<one-to-many class="exercicio39.clienteContaCartao.ClienteContaCartao" />

      	</set>

   	</class>	
</hibernate-mapping>
